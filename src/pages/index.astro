---
import Layout from '../layouts/Layout.astro';
import AvatarGenerator from '../components/feature/AvatarGenerator';
---

<Layout title="Avatar Generator">
  <main class="min-h-screen pt-12 pb-20 px-4">
    
    {/* Hero Section */}
    <div class="text-center mb-16 space-y-6">
      <h1 class="text-6xl md:text-8xl font-black text-slate-900 dark:text-white tracking-tight leading-none mb-4">
        Avatar <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 via-pink-600 to-purple-600 dark:from-purple-400 dark:via-pink-400 dark:to-purple-400 animate-gradient">Generator</span>
      </h1>
      
      <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
        Créez des avatars SVG uniques et personnalisés propulsés par l'IA
      </p>
    </div>

    {/* Main Component */}
    <AvatarGenerator client:load />

  </main>
</Layout>
