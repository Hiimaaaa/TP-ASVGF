---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Authentification...">
  <main class="min-h-screen pt-32 pb-20 px-4 flex items-center justify-center">
    <div class="text-center">
      <div class="w-16 h-16 mx-auto mb-6">
        <svg class="animate-spin text-purple-500" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-white mb-2">Authentification en cours...</h1>
      <p class="text-slate-400">Veuillez patienter</p>
    </div>
  </main>
</Layout>

<script>
  import { supabase } from '../../lib/supabase';

  // Handle the OAuth callback
  async function handleCallback() {
    try {
      const { data, error } = await supabase.auth.getSession();
      
      if (error) {
        console.error('Error getting session:', error);
        window.location.href = '/login?error=auth_failed';
        return;
      }

      if (data.session) {
        // Successfully authenticated, redirect to home
        window.location.href = '/';
      } else {
        // No session, redirect to login
        window.location.href = '/login';
      }
    } catch (err) {
      console.error('Callback error:', err);
      window.location.href = '/login?error=unknown';
    }
  }

  // Run on page load
  handleCallback();
</script>
