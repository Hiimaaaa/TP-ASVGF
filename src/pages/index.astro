---
import Layout from '../layouts/Layout.astro';
import AvatarGenerator from '../components/feature/AvatarGenerator';
---

<Layout title="CastelAPI - Générateur d'Avatar">
  <main class="min-h-screen pt-16 pb-20 px-4">
    <div class="text-center mb-12 animate-fade-in-up">
    <div class="text-center mb-16 animate-fade-in-up pt-10">
      <h2 class="text-4xl md:text-7xl font-bold text-white tracking-tight mb-6">
        Découvrez <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-400">CastelAPI</span>
      </h2>
      <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed font-light">
         Générez des avatars vectoriels uniques propulsés par l'IA. 
         <span class="text-indigo-400 font-medium">Ultra-rapide. Sans limites.</span>
      </p>
    </div>
    </div>

    <AvatarGenerator client:load />

  </main>
</Layout>
